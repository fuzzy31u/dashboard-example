    "version": "0.1.0",
    "cwd": "client",
    "tasks": [
        {
            // "isBuildCommand": true,
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-p",
                "./server"
            ],
            "showOutput": "silent",
            "problemMatcher": "$tsc",
            "taskName": "build_server",
            "suppressTaskName": true
        },
        {
            "isBuildCommand": true,
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-p",
                "./client"
            ],
            "taskName": "build_client",
            "suppressTaskName": true            
        }
